<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".register_quest">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="343dp"
        android:layout_height="617dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.57"
        app:srcCompat="@drawable/white_rec" />


    <TextView
        android:id="@+id/registerTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/cafe24"
        android:text="퀘스트 등록"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="315dp"
        android:layout_height="74dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.244">

        <EditText
            android:id="@+id/editText"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:ems="20"
            android:fontFamily="@font/dream4"
            android:hint="퀘스트 명을 입력하세요."
            android:textColor="@color/black"
            android:textSize="14sp"
            android:backgroundTint = "@color/skyblue"
            android:textSelectHandle = "@color/skyblue"
            android:textColorHighlight="@color/skyblue"
            android:textCursorDrawable ="@color/skyblue"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dream4"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:text="월"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dream4"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="화"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dream4"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="수"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dream4"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="목"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dream4"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="금"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dream4"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="토"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dream4"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="일"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dream4"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:text="격주"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/listview1"
        android:layout_width="324dp"
        android:layout_height="224dp"
        android:choiceMode="singleChoice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.554"
        android:dividerHeight="0px"
        android:divider="@color/white"/>

    <Button
        android:id="@+id/delete"
        android:layout_width="58dp"
        android:layout_height="31dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button"
        android:fontFamily="@font/dream3"
        android:text="삭제"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.745"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listview1"
        app:layout_constraintVertical_bias="0.238" />

    <Button
        android:id="@+id/add"
        android:layout_width="58dp"
        android:layout_height="31dp"
        android:background="@drawable/button"
        android:fontFamily="@font/dream3"
        android:text="추가"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/delete"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listview1"
        app:layout_constraintVertical_bias="0.301" />

    <Button
        android:id="@+id/button3"
        android:layout_width="58dp"
        android:layout_height="31dp"
        android:background="@drawable/button"
        android:fontFamily="@font/dream3"
        android:text="완료"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/delete"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toEndOf="@+id/add"
        app:layout_constraintTop_toBottomOf="@+id/listview1"
        app:layout_constraintVertical_bias="0.301" />


</androidx.constraintlayout.widget.ConstraintLayout>